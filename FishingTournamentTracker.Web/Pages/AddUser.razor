@page "/adduser"
@inject Services.IUserService userService
@inject NavigationManager navigationManager

<PageTitle>Add User</PageTitle>
<h1>Add New User</h1>
<form method="post" @onsubmit="OnSubmit">
    <div class="mb-3">
        <label for="name" class="form-label">First Name</label>
        <input @bind="SelectedUser!.FirstName" type="text" class="form-control" id="firstName" aria-describedby="firstName">
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Last Name</label>
        <input @bind="SelectedUser!.LastName" type="text" class="form-control" id="lastName" aria-describedby="lastName">
    </div>
    <div class="mb-3">
        <label for="grade" class="form-label">Grade</label>
        <input @bind="SelectedUser!.Grade" class="form-control" id="grade">
    </div>
    <div class="mb-3">
        <label class="form-check-label" for="birthday">Birthday</label>
        <input @bind="SelectedUser!.Birthday" type="date" class="form-control" id="birthday">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

